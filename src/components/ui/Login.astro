---
interface Props {
    title: string;
}

const {title} = Astro.props;
---


<div class="p-20 rounded-xl shadow-xl shadow-gray-900 border border-gray-900 hover:border-gray-600 w-1/3 text-zinc-700 bg-white">
    <div class="flex flex-col justify-center items-center">
        <div class="rounded-full p-2 bg-white border border-black">
            <img src="/public/assets/user.png" alt="LOGO" class="w-10 h-10">
        </div>
        <h2 class="mt-4">{title}</h2>
    </div>
    <div class="w-full">
        <input type="text" placeholder="Nombre de usuario" title="Ingrese su correo" class="px-4 py-2 rounded-lg border border-gray-700 mt-4 mb-2 w-full text-gray-600">
        <h2 class="text-zinc-500"> * El nombre de usuario debe de ser valido</h2>
        <input type="text" placeholder="Contraseña" title="Ingrese su password" class="px-4 py-2 rounded-lg border border-gray-700 mt-4 mb-2 w-full text-gray-600">
        <h2 class="mb-4 text-zinc-500"> * La contraseña debe de ser valida</h2>
    </div>
    <div>
        <button>
            <a class="px-4 py-2 bg-indigo-700 text-white rounded-lg hover:bg-indigo-900" href="/panel">Ingresar</a>
        </button>
    </div>
</div>